//Option Two  

        static void Optiontwo()                                                                                                                                 //This is a method and the method is called Optiontwo
        {
            try                                                                                                                                                 //Everything in try will be run however if there are issues the catch will deal with it
            {
                Console.WriteLine("Square Root Calculator");                                                                                                    //Displaying what Option 2 is
                Console.WriteLine("----------------------");                                                                                                    //Displaying numerous of dashes to distinguish the options from the instructions

                int number;                                                                                                                                     //Declaring a variable (which is a integer)
                Console.WriteLine("Please enter a positive number: ");                                                                                          //Displaying a sentence asking the user to enter a positive number
                number = Convert.ToInt32(Console.ReadLine());                                                                                                   //Parsing the number into a integer and storing it as number

                int shift2;                                                                                                                                     //Declaring a variable (which is a integer)
                Console.WriteLine("How many decimal places do you want the solution calculated to: ");                                                          //Displaying a sentence asking the user to enter how many decimal places they want it calculated to
                shift2 = Convert.ToInt32(Console.ReadLine());                                                                                                   //Parsing the number into a integer and storing it as shift2

                if (shift2 > 0 & shift2 < 7)                                                                                                                    //If the user inputer a range beween 1 and 6 for the deciaml places run the code in the if statement
                {
                    double root = 1;                                                                                                                            //Declaring variable (which is a double because it could be decimal or integer) and making it equal to 1
                    int i = 0;                                                                                                                                  //Declaring the variable (interger) i to zero

                    while (true)                                                                                                                                //A while loop to repeat until it has been told to break
                    {
                        i = i + 1;                                                                                                                              //i which is zero is eaul to zero plus 1
                        root = (number / root + root) / 2;                                                                                                      //Declaring a vairable which is equal to number divided root+root (first run this is 2) and then divide by 2 again and update the root variable  
                        if (i == number + 1) { break; }                                                                                                         //If statement when i is eaqual to the positive number plus 1 then break then it has achieved square root
                    }

                    double shift3;                                                                                                                              //Declaring a variable (which is a double)
                    shift3 = Math.Round((double)root, shift2, MidpointRounding.ToEven);                                                                         //Math.Round() is a function which will round the root. It will round the number to the nearest even numbe if it is half way to the next whole numberr
                    Console.WriteLine("The square root of " + number + " is " + shift3);                                                                        //It will display a message with the orginal number the inputed and tell the squar root of it
                    Console.ReadLine();                                                                                                                         //Getting the user input from the last statement and program will end here
                }

                else                                                                                                                                            //Else Statement
                {
                    Console.WriteLine("This should be in the range of 1 to 6 decimal places. Please start again");                                              //Displaying a message to the user to enter in a range of 1-6 decimal places
                    Console.WriteLine(" ");                                                                                                                     //Displayng a blank space seperating the Error meassage from where it displays optiontwo afterwards
                    Optiontwo();                                                                                                                                //Calling a method which is Optiontwo
                }
            }

            catch                                                                                                                                               //If there are any errors present that the program isn't told how to react it will go the catch
            {
                Console.WriteLine("Invalid Input. Please start again");                                                                                         //Displaying a message after the user makes a error when filling out the inputs in this method
                Console.WriteLine(" ");                                                                                                                         //Displayng a blank space seperating the Invalid Input from where it displays "Square Root Calculator"
                Optiontwo();                                                                                                                                    //Calling a method which is Optiontwo
            }
        }
/*Test plan for the Square Root Calculator
