//Option Two  
        //The Babylonian Method for Computing Square Roots

        static void Optiontwo()                                                                                                                                 //
        {
            try                                                                                                                                                 //
            {
                Console.WriteLine("Square Root Calculator");                                                                                                    //
                Console.WriteLine("----------------------");                                                                                                    //

                int number;                                                                                                                                     //
                Console.WriteLine("Please enter a positive number: ");                                                                                          //
                number = Convert.ToInt32(Console.ReadLine());                                                                                                   //

                int shift2;                                                                                                                                     //
                Console.WriteLine("How many decimal places do you want the solution calculated to: ");                                                          //
                shift2 = Convert.ToInt32(Console.ReadLine());                                                                                                   //

                if (shift2 > 0 & shift2 < 7)                                                                                                                    //
                {
                    double root = 1;                                                                                                                            //
                    int i = 0;                                                                                                                                  //

                    while (true)                                                                                                                                //
                    {
                        i = i + 1;                                                                                                                              //
                        root = (number / root + root) / 2;                                                                                                      //
                        if (i == number + 1) { break; }                                                                                                         //
                    }

                    double shift3;                                                                                                                              //
                    shift3 = Math.Round((double)root, shift2, MidpointRounding.ToEven);                                                                         //
                    Console.WriteLine("The square root of " + number + " is " + shift3);                                                                        //
                    Console.ReadLine();                                                                                                                         //
                }

                else if (shift2 < 0 || shift2 < 7)                                                                                                              //
                {
                    Console.WriteLine("This should be in the range of 1 to 6 decimal places. Please start again");                                              //
                    Console.WriteLine(" ");                                                                                                                     //
                    Optiontwo();                                                                                                                                //
                }

                else                                                                                                                                            //
                {
                    Console.WriteLine("This should be in the range of 1 to 6 decimal places. Please start again");                                              //
                    Console.WriteLine(" ");                                                                                                                     //
                    Optiontwo();                                                                                                                                //
                }
            }
           
            catch                                                                                                                                               //
            {
                Console.WriteLine("Invalid Input. Please start again");                                                                                         //
                Console.WriteLine(" ");                                                                                                                         //
                Optiontwo();                                                                                                                                    //
            }
        }


